<Window x:Class="IcdControl.Client.AdminUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Admin - Manage Users" Height="650" Width="980" MinHeight="600" MinWidth="940" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundColor}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Manage Users" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>
            <TextBlock Text="Search and select a user to view details and update email/password." Margin="0,6,0,0"
                       Foreground="{DynamicResource TextSecondaryColor}"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Search" Foreground="{DynamicResource TextSecondaryColor}"/>
                <TextBox x:Name="SearchTxt" Height="35" Margin="0,6,0,10" TextChanged="SearchTxt_TextChanged"/>

                <Border Background="{DynamicResource SurfaceColor}" CornerRadius="8" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
                    <DataGrid x:Name="UsersGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single"
                              SelectionChanged="UsersGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="1.2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <TextBlock x:Name="UsersHintTxt" Margin="0,10,0,0" Foreground="{DynamicResource TextSecondaryColor}"/>
            </StackPanel>

            <Border Grid.Column="2" Background="{DynamicResource SurfaceColor}" CornerRadius="8" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="User Details" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryColor}"/>

                    <StackPanel Grid.Row="1" Margin="0,12,0,0">
                        <TextBlock Text="Username" Foreground="{DynamicResource TextSecondaryColor}"/>
                        <TextBox x:Name="UsernameTxt" IsReadOnly="True" Height="35" Margin="0,6,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,12,0,0">
                        <TextBlock Text="User ID" Foreground="{DynamicResource TextSecondaryColor}"/>
                        <TextBox x:Name="UserIdTxt" IsReadOnly="True" Height="35" Margin="0,6,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4">
                        <TextBlock Text="Email" Foreground="{DynamicResource TextSecondaryColor}"/>
                        <TextBox x:Name="EmailTxt" Height="35" Margin="0,6,0,0"/>
                        <Button Content="Save Email" HorizontalAlignment="Right" Width="120" Height="35" Margin="0,10,0,0"
                                Style="{StaticResource ModernBtn}" Click="SaveEmail_Click"/>
                    </StackPanel>

                    <StackPanel Grid.Row="5" Margin="0,15,0,0">
                        <TextBlock Text="New Password" Foreground="{DynamicResource TextSecondaryColor}"/>
                        <PasswordBox x:Name="NewPasswordBox" Height="35" Margin="0,6,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="6" Margin="0,12,0,0">
                        <TextBlock Text="Confirm Password" Foreground="{DynamicResource TextSecondaryColor}"/>
                        <PasswordBox x:Name="ConfirmPasswordBox" Height="35" Margin="0,6,0,0"/>
                    </StackPanel>

                        <Button Grid.Row="7" Content="Update Password" Height="35" Margin="0,12,0,0"
                            Style="{StaticResource ModernBtn}" Click="UpdatePassword_Click"/>

                    <TextBlock x:Name="StatusTxt" Grid.Row="8" Margin="0,12,0,0" TextWrapping="Wrap"
                               Foreground="{DynamicResource TextSecondaryColor}"/>
                </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <Button Grid.Row="2" Content="Close" Click="Close_Click" HorizontalAlignment="Right" Margin="0,15,0,0" Style="{StaticResource SecondaryBtn}"/>
    </Grid>
</Window>
