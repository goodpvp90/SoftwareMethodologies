<Window x:Class="IcdControl.Client.VersionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Version History" Height="500" Width="700"
        WindowStartupLocation="CenterOwner" Background="{StaticResource BackgroundColor}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Version History" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,15"/>

        <DataGrid x:Name="VersionsGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Version" Binding="{Binding VersionNumber}" Width="100"/>
                <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" Width="200"/>
                <DataGridTextColumn Header="Created By" Binding="{Binding CreatedBy}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="View Version" Style="{StaticResource SecondaryBtn}" Click="ViewVersionBtn_Click" Margin="0,0,10,0" Width="120"/>
            <Button Content="Rollback" Style="{StaticResource ModernBtn}" Click="RollbackBtn_Click" Margin="0,0,10,0" Width="100"/>
            <Button Content="Close" Style="{StaticResource SecondaryBtn}" Click="CloseBtn_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>

