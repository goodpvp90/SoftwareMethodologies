<Window x:Class="IcdControl.Client.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="380" Width="360" WindowStartupLocation="CenterOwner">
    <ScrollViewer>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Create an Account" FontSize="18" Margin="0,0,0,12" HorizontalAlignment="Center" />
            <TextBlock Text="Username" Margin="0,4,0,0"/>
            <TextBox x:Name="UsernameTxt" Margin="0,5" />
            <TextBlock Text="Email" Margin="0,4,0,0"/>
            <TextBox x:Name="EmailTxt" Margin="0,5" />
            <TextBlock Text="Password" Margin="0,4,0,0"/>
            <PasswordBox x:Name="PassBox" Margin="0,5" />
            <TextBlock Text="Confirm Password" Margin="0,4,0,0"/>
            <PasswordBox x:Name="ConfirmPassBox" Margin="0,5" />
            <Button Content="Register" Click="Register_Click" Height="36" Margin="0,12,0,0" Background="#007ACC" Foreground="White"/>
        </StackPanel>
    </ScrollViewer>
</Window>