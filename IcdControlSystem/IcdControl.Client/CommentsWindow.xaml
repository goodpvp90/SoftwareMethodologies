<Window x:Class="IcdControl.Client.CommentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Comments" Height="500" Width="600"
        WindowStartupLocation="CenterOwner" Background="{DynamicResource BackgroundColor}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Comments" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,15"/>

        <Border Grid.Row="1" Background="{DynamicResource SurfaceColor}" CornerRadius="4" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="CommentsList" Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource SurfaceAltColor}" CornerRadius="4" Padding="10" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="{Binding UserId}" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding CommentText}" TextWrapping="Wrap" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding CreatedAt}" FontSize="10" Foreground="{DynamicResource TextSecondaryColor}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" Margin="0,15,0,15">
            <TextBlock Text="Add Comment" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="CommentTxt" MinHeight="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add Comment" Style="{StaticResource ModernBtn}" Click="AddCommentBtn_Click" Margin="0,0,10,0" Width="120"/>
            <Button Content="Close" Style="{StaticResource SecondaryBtn}" Click="CloseBtn_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>

