<Window x:Class="IcdControl.Client.NewIcdWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="New ICD" Height="400" Width="600" WindowStartupLocation="CenterOwner">
 <Grid Margin="10">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto" />
 <RowDefinition Height="*" />
 <RowDefinition Height="Auto" />
 </Grid.RowDefinitions>

 <StackPanel Orientation="Vertical">
 <TextBlock Text="Name" />
 <TextBox x:Name="NameTxt" />
 <TextBlock Text="Version" Margin="0,8,0,0" />
 <TextBox x:Name="VersionTxt" />
 <TextBlock Text="Description" Margin="0,8,0,0" />
 <TextBox x:Name="DescTxt" Height="80" AcceptsReturn="True" />
 </StackPanel>

 <TextBlock Grid.Row="1" Text="(Messages can be added later)" VerticalAlignment="Top" Margin="0,10,0,0" />

 <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
 <Button Content="Save" Click="Save_Click" Width="90" Margin="0,0,8,0" />
 <Button Content="Cancel" Click="Cancel_Click" Width="90" />
 </StackPanel>
 </Grid>
</Window>