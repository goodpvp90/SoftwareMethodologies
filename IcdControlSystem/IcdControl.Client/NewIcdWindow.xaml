<Window x:Class="IcdControl.Client.NewIcdWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="New ICD" Height="400" Width="600" MinHeight="320" MinWidth="420" WindowStartupLocation="CenterOwner"
 Background="{DynamicResource BackgroundColor}">
 <Grid Margin="20">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto" />
 <RowDefinition Height="*" />
 <RowDefinition Height="Auto" />
 </Grid.RowDefinitions>

 <StackPanel Orientation="Vertical">
 <TextBlock Text="Name" Foreground="{DynamicResource TextSecondaryColor}" />
 <TextBox x:Name="NameTxt" />
 <TextBlock Text="Version" Margin="0,8,0,0" Foreground="{DynamicResource TextSecondaryColor}" />
 <TextBox x:Name="VersionTxt" />
 <TextBlock Text="Description" Margin="0,8,0,0" Foreground="{DynamicResource TextSecondaryColor}" />
 <TextBox x:Name="DescTxt" MinHeight="80" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
 </StackPanel>

 <TextBlock Grid.Row="1" Text="(Messages can be added later)" VerticalAlignment="Top" Margin="0,10,0,0" Foreground="{DynamicResource TextSecondaryColor}" />

 <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
 <Button Content="Save" Click="Save_Click" Style="{StaticResource ModernBtn}" MinWidth="90" Margin="0,0,8,0" />
 <Button Content="Cancel" Click="Cancel_Click" Style="{StaticResource SecondaryBtn}" MinWidth="90" />
 </StackPanel>
 </Grid>
</Window>