<Window x:Class="IcdControl.Client.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C Header Preview" Height="600" Width="800"
        WindowStartupLocation="CenterOwner" Background="{DynamicResource BackgroundColor}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="C Header Preview" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,15"/>

        <Border Grid.Row="1" Background="{DynamicResource SurfaceColor}" CornerRadius="4" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="PreviewTxt" IsReadOnly="True" 
                         FontFamily="Consolas" FontSize="12" 
                         Background="{DynamicResource ControlBackgroundColor}" Foreground="{DynamicResource TextPrimaryColor}"
                         BorderThickness="0" TextWrapping="NoWrap"/>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Copy to Clipboard" Style="{StaticResource SecondaryBtn}" Click="CopyBtn_Click" Margin="0,0,10,0" Width="130"/>
            <Button Content="Close" Style="{StaticResource ModernBtn}" Click="CloseBtn_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>

