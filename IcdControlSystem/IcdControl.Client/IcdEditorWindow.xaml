<Window x:Class="IcdControl.Client.IcdEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:IcdControl.Models;assembly=IcdControl.Models"
        xmlns:local="clr-namespace:IcdControl.Client"
        mc:Ignorable="d"
        Title="ICD Editor Studio" Height="900" Width="1250"
        WindowStartupLocation="CenterOwner" Background="{DynamicResource BackgroundColor}"
        PreviewMouseDown="Window_PreviewMouseDown">

    <Window.Resources>
        <local:TypeToIconConverter x:Key="TypeToIconConverter"/>
        <local:TypeToColorConverter x:Key="TypeToColorConverter"/>
        <local:BitfieldDisplayConverter x:Key="BitfieldDisplayConverter"/>
        <local:IsUnsignedConverter x:Key="IsUnsignedConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="TreeViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="0,1"/>
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#2563EB"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#2563EB"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="DarkComboBoxTemplate" TargetType="ComboBox">
            <Grid>
                <ToggleButton Name="ToggleButton" Grid.Column="2" Focusable="false" IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                <Path x:Name="Arrow" Fill="{TemplateBinding Foreground}" HorizontalAlignment="Right" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z" Margin="0,0,10,0"/>
                            </Border>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
                <ContentPresenter Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" Margin="6,3,23,3" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                    <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                        <Border x:Name="DropDownBorder" Background="{DynamicResource SurfaceColor}" BorderThickness="1" BorderBrush="{DynamicResource BorderColor}"/>
                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                        </ScrollViewer>
                    </Grid>
                </Popup>
            </Grid>
        </ControlTemplate>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Template" Value="{StaticResource DarkComboBoxTemplate}"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

        <DataTemplate DataType="{x:Type models:DataField}">
            <Grid Background="Transparent" Margin="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Type, Converter={StaticResource TypeToIconConverter}}" 
                               Foreground="{Binding Type, Converter={StaticResource TypeToColorConverter}}" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding Name}" Foreground="{DynamicResource TextPrimaryColor}"/>
                    <TextBlock Text=" : " Foreground="{DynamicResource TextSecondaryColor}"/>
                    <TextBlock Text="{Binding Type}" Foreground="{DynamicResource TextSecondaryColor}"/>
                    <TextBlock Foreground="#A0AEC0" FontSize="11" VerticalAlignment="Center" Margin="5,0,0,0">
                        <TextBlock.Text>
                            <MultiBinding Converter="{StaticResource BitfieldDisplayConverter}">
                                <Binding Path="Type" />
                                <Binding Path="SizeInBits" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <HierarchicalDataTemplate DataType="{x:Type models:Message}" ItemsSource="{Binding Fields}">
            <Grid Background="Transparent" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âœ‰ï¸ "/>
                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryColor}"/>
                </StackPanel>
            </Grid>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate DataType="{x:Type models:Struct}" ItemsSource="{Binding Fields}">
            <Grid Background="Transparent" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“¦ "/>
                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryColor}"/>
                    <TextBlock Text=" (Union)" Foreground="#F59E0B" FontSize="10" VerticalAlignment="Center" Margin="5,0,0,0" 
                               Visibility="{Binding IsUnion, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}"/>
                </StackPanel>
            </Grid>
        </HierarchicalDataTemplate>

        <DataTemplate x:Key="PrimitiveFieldTemplate">
            <StackPanel Margin="10">
                <Border BorderBrush="#60A5FA" BorderThickness="0,0,0,2" Margin="0,0,0,15">
                    <TextBlock Text="Edit Primitive Field" FontSize="18" FontWeight="Bold" Foreground="#60A5FA" Margin="0,0,0,10"/>
                </Border>
                <TextBlock Text="Variable Name" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,0,4"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>
                <TextBlock Text="Primitive Type" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,0,4"/>
                <ComboBox SelectedItem="{Binding Type, UpdateSourceTrigger=PropertyChanged}" 
                          ItemsSource="{Binding DataContext.PrimitiveTypes, RelativeSource={RelativeSource AncestorType=Window}}"
                          SelectionChanged="FieldType_SelectionChanged"
                          Style="{StaticResource DarkComboBox}" Margin="0,0,0,15"/>
                <TextBlock Text="Size (Bits)" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,0,4"/>
                <TextBox Text="{Binding SizeInBits, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding Type, Converter={StaticResource IsUnsignedConverter}}"
                         LostFocus="FieldSize_LostFocus"/>
                <Button Content="ðŸ—‘ Remove Field" Click="RemoveItem_Click" Style="{StaticResource SecondaryBtn}" Foreground="#EF4444" HorizontalAlignment="Left" Margin="0,30,0,0"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="LinkedStructTemplate">
            <StackPanel Margin="10">
                <Border BorderBrush="#F59E0B" BorderThickness="0,0,0,2" Margin="0,0,0,15">
                    <TextBlock Text="ðŸ”— Linked Struct Instance" FontSize="18" FontWeight="Bold" Foreground="#F59E0B" Margin="0,0,0,10"/>
                </Border>
                <TextBlock Text="Note: This is an instance of another Struct definition." Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,0,20"/>
                <TextBlock Text="Instance Name" Foreground="#F59E0B" FontWeight="Bold" Margin="0,0,0,4"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>
                <TextBlock Text="Struct Definition Type" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,0,4"/>
                <ComboBox SelectedItem="{Binding Type, UpdateSourceTrigger=PropertyChanged}" 
                          ItemsSource="{Binding DataContext.StructTypes, RelativeSource={RelativeSource AncestorType=Window}}"
                          Style="{StaticResource DarkComboBox}" Margin="0,0,0,15"/>
                <Button Content="ðŸ—‘ Remove Link" Click="RemoveItem_Click" Style="{StaticResource SecondaryBtn}" Foreground="#EF4444" HorizontalAlignment="Left" Margin="0,20,0,0"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="MessageEditorTemplate">
            <StackPanel Margin="10">
                <TextBlock Text="Edit Message" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryColor}" Margin="0,0,0,15"/>
                <TextBlock Text="Name" Foreground="{DynamicResource TextSecondaryColor}"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
                <TextBlock Text="ID (OpCode)" Foreground="{DynamicResource TextSecondaryColor}"/>
                <TextBox Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
                <TextBlock Text="Description" Foreground="{DynamicResource TextSecondaryColor}"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Height="60" TextWrapping="Wrap" Margin="0,0,0,20"/>
                <TextBlock Text="Add Variables:" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="+ Add Primitive" Click="AddPrimitive_Click" Style="{StaticResource ModernBtn}" Margin="0,0,10,0"/>
                    <Button Content="+ Add Linked Struct" Click="AddLinkedStruct_Click" Style="{StaticResource ModernBtn}" Background="#F59E0B" BorderBrush="#F59E0B" Margin="0,0,10,0"/>
                </StackPanel>
                <Button Content="ðŸ—‘ Delete Message" Click="RemoveItem_Click" Style="{StaticResource SecondaryBtn}" Foreground="#EF4444" HorizontalAlignment="Left" Margin="0,20,0,0"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="StructEditorTemplate">
            <StackPanel Margin="10">
                <Border BorderBrush="#10B981" BorderThickness="0,0,0,2" Margin="0,0,0,15">
                    <TextBlock Text="Edit Struct Definition" FontSize="18" FontWeight="Bold" Foreground="#10B981" Margin="0,0,0,10"/>
                </Border>
                <TextBlock Text="Struct Name" Foreground="{DynamicResource TextSecondaryColor}"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <Border Background="#33FFFFFF" CornerRadius="4" Padding="5" Margin="0,0,0,10">
                    <CheckBox IsChecked="{Binding IsUnion, Mode=TwoWay}" 
                              Foreground="{DynamicResource TextPrimaryColor}"
                              VerticalContentAlignment="Center">
                        <TextBlock Text="Is Union?" FontWeight="Bold" FontSize="14"/>
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                        </CheckBox.LayoutTransform>
                    </CheckBox>
                </Border>

                <TextBlock Text="Description" Foreground="{DynamicResource TextSecondaryColor}"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Height="60" TextWrapping="Wrap" Margin="0,0,0,20"/>
                <TextBlock Text="Add Variables:" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="+ Add Primitive" Click="AddPrimitive_Click" Style="{StaticResource ModernBtn}" Margin="0,0,10,0"/>
                    <Button Content="+ Add Linked Struct" Click="AddLinkedStruct_Click" Style="{StaticResource ModernBtn}" Background="#F59E0B" BorderBrush="#F59E0B" Margin="0,0,10,0"/>
                </StackPanel>
                <Button Content="ðŸ—‘ Delete Struct" Click="RemoveItem_Click" Style="{StaticResource SecondaryBtn}" Foreground="#EF4444" HorizontalAlignment="Left" Margin="0,20,0,0"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="ICD Editor" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryColor}" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="â†© Undo" Click="Undo_Click" Style="{StaticResource SecondaryBtn}" Margin="0,0,5,0"/>
                    <Button Content="â†ª Redo" Click="Redo_Click" Style="{StaticResource SecondaryBtn}" Margin="0,0,15,0"/>
                    <Rectangle Width="1" Fill="{DynamicResource BorderColor}" Margin="0,4"/>
                    <Button Content="â¬‡ Export .h" Click="ExportHeader_Click" Style="{StaticResource SecondaryBtn}" Margin="15,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Last Modified:" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,5,0"/>
                    <TextBlock x:Name="LastUserTxt" Text="Unknown" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryColor}" Margin="0,0,15,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="{DynamicResource BackgroundColor}" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Width="250" Margin="0,0,20,0">
                        <TextBlock Text="ICD Name" Foreground="{DynamicResource TextSecondaryColor}" FontSize="11"/>
                        <TextBox x:Name="NameTxt" FontSize="14"/>
                    </StackPanel>
                    <StackPanel Width="100">
                        <TextBlock Text="Version" Foreground="{DynamicResource TextSecondaryColor}" FontSize="11"/>
                        <TextBox x:Name="VersionTxt" FontSize="14" TextChanged="VersionTxt_TextChanged"/>
                    </StackPanel>
                </StackPanel>
                <Expander Grid.Column="1" Header="Description" Foreground="{DynamicResource TextSecondaryColor}">
                    <TextBox x:Name="DescTxt" Width="300" Height="60" TextWrapping="Wrap"/>
                </Expander>
            </Grid>
        </Border>

        <Grid Grid.Row="2" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="{DynamicResource SurfaceColor}" CornerRadius="4" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="MESSAGES" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryColor}" Margin="10"/>
                        <Button DockPanel.Dock="Bottom" Content="+ Add Message" Click="AddMessage_Click" Style="{StaticResource SecondaryBtn}" Margin="5"/>
                        <TreeView x:Name="MessagesTree" Background="Transparent" BorderThickness="0" 
                                  SelectedItemChanged="MessagesTree_SelectedItemChanged" Padding="5"
                                  AllowDrop="True"
                                  PreviewMouseLeftButtonDown="Tree_PreviewMouseLeftButtonDown"
                                  PreviewMouseMove="Tree_PreviewMouseMove"
                                  DragOver="Tree_DragOver"
                                  Drop="Tree_Drop"/>
                    </DockPanel>
                </Border>
                <Border Grid.Row="2" Background="{DynamicResource SurfaceColor}" CornerRadius="4" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="STRUCTS" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryColor}" Margin="10"/>
                        <Button DockPanel.Dock="Bottom" Content="+ Add Struct Definition" Click="AddStruct_Click" Style="{StaticResource SecondaryBtn}" Margin="5"/>
                        <TreeView x:Name="StructsTree" Background="Transparent" BorderThickness="0" 
                                  SelectedItemChanged="StructsTree_SelectedItemChanged" Padding="5"
                                  AllowDrop="True"
                                  PreviewMouseLeftButtonDown="Tree_PreviewMouseLeftButtonDown"
                                  PreviewMouseMove="Tree_PreviewMouseMove"
                                  DragOver="Tree_DragOver"
                                  Drop="Tree_Drop"/>
                    </DockPanel>
                </Border>
            </Grid>

            <Border Grid.Column="2" Background="{DynamicResource SurfaceColor}" CornerRadius="4" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ContentControl x:Name="DetailsPresenter" Margin="20"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <Border Grid.Row="3" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,1,0,0" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="StatusTxt" VerticalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,20,0"/>
                <Button Content="Save All Changes" Click="SaveBtn_Click" Style="{StaticResource ModernBtn}" Width="150" Margin="0,0,10,0"/>
                <Button Content="Close" Click="CancelBtn_Click" Style="{StaticResource SecondaryBtn}" Width="80"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>