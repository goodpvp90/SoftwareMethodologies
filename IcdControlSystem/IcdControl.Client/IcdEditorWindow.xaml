<Window x:Class="IcdControl.Client.IcdEditorWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="ICD Editor" Height="500" Width="700" WindowStartupLocation="CenterOwner">
 <Grid Margin="10">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto" />
 <RowDefinition Height="*" />
 <RowDefinition Height="Auto" />
 </Grid.RowDefinitions>

 <StackPanel Orientation="Horizontal">
 <TextBlock Text="ICD: " FontWeight="Bold" />
 <TextBlock x:Name="NameTxt" />
 <TextBlock Text=" Version: " Margin="8,0,0,0" />
 <TextBlock x:Name="VersionTxt" />
 </StackPanel>

 <TextBox x:Name="MessagesTxt" Grid.Row="1" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" />

 <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
 <Button Content="Save" Click="Save_Click" Width="90" Margin="0,0,8,0" />
 <Button Content="Close" Click="Close_Click" Width="90" />
 </StackPanel>
 </Grid>
</Window>