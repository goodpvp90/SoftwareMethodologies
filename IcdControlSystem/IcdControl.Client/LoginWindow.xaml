<Window x:Class="IcdControl.Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="320" Width="320" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="ICD System Login" FontSize="20" Margin="0,0,0,12" HorizontalAlignment="Center"/>
        <TextBox x:Name="EmailTxt" Margin="0,5" Tag="Email"/>
        <PasswordBox x:Name="PassBox" Margin="0,5" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,12,0,0">
            <Button Content="Login" Click="Login_Click" Height="35" Width="160" Background="#007ACC" Foreground="White"/>
            <Button Content="Register" Click="OpenRegister_Click" Height="35" Width="100" Margin="8,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>