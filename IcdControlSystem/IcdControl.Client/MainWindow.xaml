<Window x:Class="IcdControl.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IcdControl.Client"
        mc:Ignorable="d"
        Title="ICD Control System" Height="600" Width="1000" 
        WindowStartupLocation="CenterScreen" Background="{DynamicResource BackgroundColor}"
        Loaded="Window_Loaded" PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{DynamicResource SurfaceColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
            <StackPanel Margin="20">
                <TextBlock Text="ICD Control" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,30"/>

                <TextBlock Text="MENU" FontSize="12" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,0,0,10"/>
                <Button x:Name="NewBtn" Content="+ New ICD" Style="{StaticResource ModernBtn}" Click="NewBtn_Click" Margin="0,0,0,10"/>
                <Button x:Name="TemplateBtn" Content="📋 From Template" Style="{StaticResource SecondaryBtn}" Click="TemplateBtn_Click" Margin="0,0,0,10"/>
                <Button x:Name="RefreshBtn" Content="Refresh List" Style="{StaticResource SecondaryBtn}" Click="RefreshBtn_Click" Margin="0,0,0,10"/>

                <TextBlock Text="ACTIONS" FontSize="12" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,20,0,10"/>
                <Button x:Name="OpenBtn" Content="Open Editor" Style="{StaticResource SecondaryBtn}" Click="OpenBtn_Click" Margin="0,0,0,10"/>
                <Button x:Name="ExportBtn" Content="Export Header" Style="{StaticResource SecondaryBtn}" Click="ExportBtn_Click" Margin="0,0,0,10"/>
                <Button x:Name="ExportCsvBtn" Content="Export CSV" Style="{StaticResource SecondaryBtn}" Click="ExportCsvBtn_Click" Margin="0,0,0,10"/>

                <StackPanel x:Name="AdminPanel" Visibility="Collapsed">
                    <TextBlock Text="ADMIN" FontSize="12" Foreground="{DynamicResource TextSecondaryColor}" Margin="0,20,0,10"/>
                    <Button Content="Manage Permissions" Style="{StaticResource SecondaryBtn}" Click="AdminPermissions_Click" Margin="0,0,0,10"/>
                    <Button Content="Manage Users" Style="{StaticResource SecondaryBtn}" Click="AdminUsers_Click" Margin="0,0,0,10"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Dashboard" FontSize="28" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryColor}" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <Button x:Name="SettingsBtn" Content="⚙ Settings" Style="{StaticResource SecondaryBtn}" Click="SettingsBtn_Click" Margin="0,0,10,0"/>
                <Button x:Name="StatsBtn" Content="📊 Stats" Style="{StaticResource SecondaryBtn}" Click="StatsBtn_Click"/>
            </StackPanel>

            <Border Grid.Row="1" Background="{DynamicResource SurfaceColor}" CornerRadius="8" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Search" Foreground="{DynamicResource TextSecondaryColor}" FontSize="12" Margin="0,0,0,5"/>

                    <TextBox x:Name="SearchTxt" Grid.Row="1" TextChanged="SearchTxt_TextChanged" Margin="0,0,10,0"
                             Foreground="{DynamicResource TextPrimaryColor}" 
                             CaretBrush="{DynamicResource TextPrimaryColor}"/>

                    <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Margin="10,0,10,0">
                        <TextBlock Text="Min Version:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{DynamicResource TextSecondaryColor}"/>
                        <TextBox x:Name="MinVersionTxt" Width="60" TextChanged="Filter_Changed"
                                 Foreground="{DynamicResource TextPrimaryColor}" 
                                 CaretBrush="{DynamicResource TextPrimaryColor}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" Margin="10,0,10,0">
                        <TextBlock Text="Max Version:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{DynamicResource TextSecondaryColor}"/>
                        <TextBox x:Name="MaxVersionTxt" Width="60" TextChanged="Filter_Changed"
                                 Foreground="{DynamicResource TextPrimaryColor}" 
                                 CaretBrush="{DynamicResource TextPrimaryColor}"/>
                    </StackPanel>

                    <Button Grid.Column="3" Grid.Row="1" Content="Clear" Style="{StaticResource SecondaryBtn}" Click="ClearFilter_Click" Width="60"/>
                </Grid>
            </Border>

            <Border Grid.Row="2" Background="{DynamicResource SurfaceColor}" CornerRadius="8" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
                <DataGrid x:Name="IcdGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" MouseDoubleClick="IcdGrid_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ICD Name" Binding="{Binding Name}" Width="1.5*" />
                        <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="80" />
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*" />
                        <DataGridTextColumn Header="Messages" Binding="{Binding Messages.Count}" Width="100" />
                        <DataGridTextColumn Header="Structs" Binding="{Binding Structs.Count}" Width="100" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>