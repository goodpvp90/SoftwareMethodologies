<Window x:Class="ICDControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ICD Dashboard" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Background="#F9F9F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#2D3E50" Padding="15">
            <DockPanel>
                <TextBlock Text="ICD Manager" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <TextBlock x:Name="UserInfoTxt" Text="User: ..." Foreground="#DDD" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Content="Logout" Click="Logout_Click" Padding="10,2" Background="#C0392B" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel LastChildFill="False" Margin="0,0,0,15">
                <TextBlock Text="My Projects" FontSize="24" FontWeight="SemiBold" Foreground="#333"/>
                <Button Content="+ New Project" Click="NewProject_Click" DockPanel.Dock="Right" Padding="15,5" Background="#27AE60" Foreground="White" FontWeight="Bold"/>
            </DockPanel>

            <ListView x:Name="ProjectsList" Grid.Row="1" BorderThickness="0" Background="Transparent">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                        <GridViewColumn Header="Version" DisplayMemberBinding="{Binding Version}" Width="80"/>
                        <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="300"/>
                        <GridViewColumn Header="Last Updated" DisplayMemberBinding="{Binding LastUpdated}" Width="150"/>
                        <GridViewColumn Header="Actions" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Export .h File" Click="Export_Click" Background="#3498DB" Foreground="White" Padding="5,2"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>